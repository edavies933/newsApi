<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:elevation="60dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/article_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
        android:layout_margin="10dp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title "
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="@dimen/article_title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/article_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="article abc"
                android:layout_margin="@dimen/article_author_margin"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="@dimen/article_author_text_size" />
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>